{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "Secret": "secretsecretsecretsecretsecretsecret",
    "Issuer": "issuer",
    "Audience": "audience",
    "AccessTokenExpirationInMinutes": 1,
    "AccessTokenCookieExpirationInMinutes": 30,
    "RefreshTokenCookieExpirationInDays": 14,
    "RefreshTokenExpirationInDays": 7,
    "RefreshTokenSizeInBytes": 32
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Grpc": "Debug"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args":
        {
          "path": "logs/log-",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 5,
          "outputTemplate": "{Timestamp:dd-MM-yyyy HH:mm:ss.fff zzz} [{Level:u3}] Source: {SourceContext} Host: {MachineName} Thread: {ThreadId} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
