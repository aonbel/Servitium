@page
@using Servitium.Pages
@model Servitium.Pages.Persons.Manager.Index
@{
    ViewData["Title"] = "All persons";
}

<h1 xmlns="http://www.w3.org/1999/html">Persons</h1>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Person name</th>
        <th>User id</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var person in Model.Data)
    {
        <tr>
            <td>@person.LastName @person.FirstName</td>
            <td>@person.UserId</td>
            <td>
                
            </td>
        </tr>
    }
    </tbody>
</table>
