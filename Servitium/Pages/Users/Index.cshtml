@page
@model Servitium.Pages.Users.Index
@{
    ViewData["Title"] = "Users";
}

<h1 xmlns="http://www.w3.org/1999/html">Users</h1>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>User name</th>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Data)
    {
        <tr>
            <td>@user.Username</td>
            <td>@user.Roles.FirstOrDefault()</td>
            <td>@user.Password</td>
        </tr>
    }
    </tbody>
</table>

<p>Total users: @Model.Data.Count</p>