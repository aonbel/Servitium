@page "{id}"
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Servitium.Pages.Clients.Create
@{
    ViewData["Title"] = "User promotion";
}

<h1>Promote user to a client</h1>

<form method="post" asp-antiforgery="true">
    <div class="form-floating mb-3">
        <input asp-for="Input.Birthday" class="form-control" aria-required="true"/>
        <label asp-for="Input.Birthday" class="control-label"></label>
        <span asp-validation-for="Input.Birthday" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <select asp-for="Input.Gender" asp-items="Model.GenderList" class="form-control" aria-required="true"></select>
        <label asp-for="Input.Gender" class="control-label"></label>
        <span asp-validation-for="Input.Gender" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Create" class="btn btn-primary"/>
    </div>
</form>