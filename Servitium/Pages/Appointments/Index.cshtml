@page
@model Servitium.Pages.Appointments.Index

<h1 xmlns="http://www.w3.org/1999/html">Your appointments</h1>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th></th>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
        <th>Smth</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var appointment in Model.Appointments)
    {
        <tr>
            <td>@appointment.Date</td>
            <td>@appointment.SpecialistId</td>
            <td>@appointment.TimeSegment.Begin</td>
            <td>@appointment.TimeSegment.End</td>
        </tr>
    }
    </tbody>
</table>