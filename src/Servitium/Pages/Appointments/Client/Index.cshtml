@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Servitium.Pages
@model Servitium.Pages.Appointments.Client.Index

<h1 xmlns="http://www.w3.org/1999/html">Your appointments</h1>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Service name</th>
        <th>Service provider name</th>
        <th>Time</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var dataInstance in Model.Data)
    {
        <tr>
            <td>@dataInstance.service.ShortName</td>
            <td>@dataInstance.serviceProvider.ShortName</td>
            <td>@dataInstance.appointment.TimeSegment</td>
            <td>
                <a asp-page="@Routes.AppointmentDetails" asp-route-id="@dataInstance.appointment.Id" class="btn btn-info btn-sm" title="Details">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                        <title>View details</title>
                        <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM8 13c-2.5 0-4.5-2-4.5-4.5S5.5 4 8 4s4.5 2 4.5 4.5S10.5 13 8 13z"/>
                        <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5z"/>
                    </svg>
                </a>
                <a asp-page="@Routes.AppointmentDelete" asp-route-id="@dataInstance.appointment.Id" class="btn btn-danger btn-sm" title="Delete">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                        <title>Delete</title>
                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                    </svg>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>