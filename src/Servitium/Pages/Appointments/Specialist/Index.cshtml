@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Servitium.Pages
@model Servitium.Pages.Appointments.Specialist.Index

<h1 xmlns="http://www.w3.org/1999/html">Your appointments</h1>

@if (Model.Data.CurrentAppointmentId is not null)
{
    <a asp-page="@Routes.AppointmentSpecialistDetails" asp-route-appointmentId="@Model.Data.CurrentAppointmentId"
       class="btn btn-warning btn-sm" title="Inspect current">
        <label>Inspect current</label>
    </a>
}

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Service name</th>
        <th>Time</th>
    </tr>
    </thead>
    <tbody>
    @for (var index = 0; index < Model.Data.Appointments.Count; index++)
    {
        <tr>
            <td>@Model.Data.Services[index].ShortName</td>
            <td>@Model.Data.Appointments[index].TimeSegment</td>
        </tr>
    }
    </tbody>
</table>