@page "{id}"
@using Servitium.Infrastructure.PagesConstants
@model Servitium.Pages.Specialists.Manager.Create
@{
    ViewData["Title"] = "User promotion";
}

<h1 xmlns="http://www.w3.org/1999/html">Promote user to a specialist</h1>

<form method="post" asp-antiforgery="true">
    <div class="form-floating mb-3">
        <input asp-for="Input.PricePerHour" class="form-control" aria-required="true"/>
        <label asp-for="Input.PricePerHour" class="control-label"></label>
        <span asp-validation-for="Input.PricePerHour" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Input.WorkBeginTime" class="form-control" aria-required="true"></input>
        <label asp-for="Input.WorkBeginTime" class="control-label"></label>
        <span asp-validation-for="Input.WorkBeginTime" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Input.WorkEndTime" class="form-control" aria-required="true"></input>
        <label asp-for="Input.WorkEndTime" class="control-label"></label>
        <span asp-validation-for="Input.WorkEndTime" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Input.WorkDays" class="control-label"></label>
        <select multiple asp-for="Input.WorkDays" asp-items="DaysOfWeek.DaysOfWeekSelectList" class="form-control" aria-required="true"></select>
        <span asp-validation-for="Input.WorkDays" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Input.Contacts" class="form-control" aria-required="true"></input>
        <label asp-for="Input.Contacts" class="control-label"></label>
        <span asp-validation-for="Input.Contacts" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Input.Location" class="form-control" aria-required="true"></input>
        <label asp-for="Input.Location" class="control-label"></label>
        <span asp-validation-for="Input.Location" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Input.ServiceIds" class="control-label"></label>
        <select multiple asp-for="Input.ServiceIds" asp-items="Model.ServicesSelectList" class="form-control" aria-required="true"></select>
        <span asp-validation-for="Input.ServiceIds" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Create" class="btn btn-primary"/>
    </div>
</form>