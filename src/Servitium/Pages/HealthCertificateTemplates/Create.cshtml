@page
@model Servitium.Pages.HealthCertificateTemplates.Create

<h1 xmlns="http://www.w3.org/1999/html">Add a new health certificate template</h1>

<form method="post" asp-antiforgery="true">
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <div class="form-floating mb-3">
        <input asp-for="Input.Name" class="form-control" aria-required="true"/>
        <label asp-for="Input.Name" class="control-label"></label>
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Input.ActivePeriod" class="form-control" aria-required="true"/>
        <label asp-for="Input.ActivePeriod" class="control-label"></label>
        <span asp-validation-for="Input.ActivePeriod" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Create" class="btn btn-primary"/>
    </div>
</form>