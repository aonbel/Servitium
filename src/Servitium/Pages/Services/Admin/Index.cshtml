@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Servitium.Pages
@model Servitium.Pages.Services.Admin.Index
@{
    ViewData["Title"] = "Services";
}

<h1 xmlns="http://www.w3.org/1999/html">Services</h1>

<a asp-page="@Routes.ServiceCreate" class="btn btn-warning btn-sm" title="Create">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
    </svg>  
</a>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Service short name</th>
        <th>Service description</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var service in Model.Data.Services)
    {
        <tr>
            <td>@service.ShortName</td>
            <td>@service.Description</td>
            <td>
                
            </td>
        </tr>
    }
    </tbody>
</table>

<p>Total users: @Model.Data.Services.Count</p>