@page "{id:int}"
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Servitium.Infrastructure.PagesConstants
@using Servitium.Pages
@model Servitium.Pages.ServiceProviders.Details

<form method="get">
    <div class="form-floating mb-3">
        <input asp-for="@Model.Data.ShortName" class="form-control" readonly/>
        <label asp-for="@Model.Data.ShortName" class="control-label"></label>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="@Model.Data.FullName" class="form-control" readonly/>
        <label asp-for="@Model.Data.FullName" class="control-label"></label>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="@Model.Data.Address" class="form-control" readonly/>
        <label asp-for="@Model.Data.Address" class="control-label"></label>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="@Model.Data.WorkTime" class="form-control" readonly/>
        <label asp-for="@Model.Data.WorkTime" class="control-label"></label>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="@Model.Data.Contacts" class="form-control" readonly/>
        <label asp-for="@Model.Data.Contacts" class="control-label"></label>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Data.WorkDays">Work days</label>
        <select asp-for="@Model.Data.WorkDays" asp-items="@DaysOfWeek.DaysOfWeekSelectList" class="form-control" disabled></select>
    </div>
    <div class="form-group mt-3">
        <a asp-page="@Routes.ServiceProvidersIndex" class="btn btn-secondary">Back to list</a>
    </div>
</form>