@page
@using Servitium.Pages
@model Servitium.Pages.ServiceProviders.Index

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var serviceProvider in Model.Data)
    {
        <tr>
            <td>@serviceProvider.ShortName</td>
            <td>@serviceProvider.Address</td>
            <td>
                <a asp-page="@Routes.ServiceProviderDetails" asp-route-id="@serviceProvider.Id" class="btn btn-info btn-sm" title="Details">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                        <title>View details</title>
                        <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM8 13c-2.5 0-4.5-2-4.5-4.5S5.5 4 8 4s4.5 2 4.5 4.5S10.5 13 8 13z"/>
                        <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5z"/>
                    </svg>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>